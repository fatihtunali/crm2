# Database Configuration
# Replace these with your actual database credentials
DATABASE_URL="mysql://username:password@host:port/database"
DATABASE_HOST=your_database_host
DATABASE_PORT=3306
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_secure_database_password
DATABASE_NAME=your_database_name

# JWT Secret for Authentication
# IMPORTANT: Generate a strong secret with: openssl rand -base64 32
# This MUST be at least 32 characters long - the application will fail to start without it
JWT_SECRET=your_jwt_secret_at_least_32_characters_long_replace_this_with_generated_secret

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# AI Configuration (Anthropic Claude)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key

# Optional: Redis for caching and rate limiting
# REDIS_URL=redis://localhost:6379

# Optional: Error monitoring (Sentry)
# SENTRY_DSN=your_sentry_dsn

# Optional: Email configuration for notifications
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=noreply@example.com

# Optional: Logging level
# LOG_LEVEL=info
